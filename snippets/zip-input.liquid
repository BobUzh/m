<custom-zip
  class="zip-code"
  data-la1="{{ la1 }}"
  data-la2="{{ la2 }}"
  data-sf1="{{ sf1 }}"
  data-sf2="{{ sf2 }}">
  <label for="zip" class="custom-title">{{ settings.zip_title }}</label>
  <div class="input-group">
    <input
      id="zip"
      type="text"
      data-state="la">
    <button>GO</button>
  </div>
  <span class="zip-message error-empty message-hidden custom-title">{{ settings.zip_empty }}</span>
  <span class="zip-message error-message message-hidden custom-title">{{ settings.zip_error_message }}</span>
  <span class="zip-message special-message message-hidden custom-title">{{ settings.zip_special_message }}</span>
  <span class="zip-message success-message message-hidden custom-title">{{ settings.zip_success_message }}</span>
  <span class="zip-message valid-message message-hidden custom-title">{{ settings.zip_not_valid }}</span>
  <div id="sedUserMail">
    <div class="leave-mail">
      <div class="mail-group">
        <input type="text" class="mail-input">
        <button class="a-btn">send</button>
      </div>
      <span class="success-message message-hidden custom-title">{{ settings.send_mail_message }}</span>
    </div>
  </div>
</custom-zip>


{% style %}
  .zip-code input {
    font-family: Palo;
  }
  .leave-mail {
    margin-top: 20px;
    display: none;
  }
  .d-show {
    display: block !important;
  }
  .mail-group {
    display: flex;
  }
  .mail-input {
    width: 100%;
    height: 40px;
    padding-left: 10px;
  }
  .mail-group .a-btn {
    border-bottom-left-radius: 0 !important;
    border-top-left-radius: 0 !important;
    height: auto !important;
    width: auto !important;
  }
{% endstyle %}